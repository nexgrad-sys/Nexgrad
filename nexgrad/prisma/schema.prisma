generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
 

model University {
  id          String   @id @default(uuid())
  name        String
  country     String
  region      String   // Europe, UK, US, Asia
  logo        String?
  createdAt   DateTime @default(now())
  programs    Program[]
}

model Program {
  id              String   @id @default(uuid())
  title           String
  slug            String   @unique
  overview        String?   @db.LongText
  curriculum      Json?
  description     String
  heroImage       String?
  intake          String?
  accreditation   String?
  scholarships    Boolean  @default(false)
  emiAvailable   Boolean  @default(false)
  emiMonths      Int?
  applicationFee Float?
  faculty        Faculty[]  @relation("ProgramFaculty")
  careerAdvancement   Int?
  salaryIncrease      Int?
  employmentRate      Int?
  durationMonths  Int
  mode            ProgramMode
  credits         Int?
  tuition         Float
  currency        String   @default("USD")
  degreeLevel     DegreeLevel
  subjectArea     SubjectArea
  faqs            FAQ[]
  featured        Boolean  @default(false)
  trending        Boolean  @default(false)
  newLaunch       Boolean  @default(false)
  dualDegree      Boolean  @default(false)
  universityId    String
  university      University @relation(fields: [universityId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model FAQ {
  id        String   @id @default(uuid())
  question  String
  answer    String
  program   Program  @relation(fields: [programId], references: [id])
  programId String
  createdAt DateTime @default(now())
}

enum DegreeLevel {
  DBA
  MBA
  MCA
  MCOM
  MED
  BBA
  BCA
  BCOM
}

enum SubjectArea {
  GENERAL_MANAGEMENT
  FINANCE_BANKING
  MARKETING_STRATEGY
  HEALTHCARE_MANAGEMENT
  TECHNOLOGY_INNOVATION
  HUMAN_RESOURCES
}

enum ProgramMode {
  ONLINE
  HYBRID
  ON_CAMPUS
}

model Blog {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  excerpt     String?
  content     String   @db.LongText
  coverImage  String?
  category    String?
  region      String?   // e.g. GCC, Global
  published   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Faculty {
  id          String    @id @default(uuid())
  name        String
  designation String?
  bio         String?
  photo       String?
  programs    Program[]  @relation("ProgramFaculty")
  createdAt   DateTime  @default(now())
}
